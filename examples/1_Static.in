spinsys {
  channels 1H
  nuclei 1H
  shift 1 0 10p 0 0 0 0
}

par {
  crystal_file     alpha0beta0
  variable index   1
  variable lb      50

  sw               10000
  variable tsw     1e6/sw
  np               512
  proton_frequency 400e6
  start_operator   I1x
  detect_operator  I1p
  method           direct
  gamma_angles     1
  spin_rate        0
  verbose          1101
}

proc pulseq {} {
  global par
  
  acq
  for {set i 1} {$i < $par(np)} {incr i} {
    delay $par(tsw)
    acq
  }
}

proc main {} {
  global par
  
  set f [fsimpson]
  faddlb $f $par(lb) 0
  fsave $f $par(name),$par(index).fid
  fzerofill $f 4096
  fft $f
  fsave $f $par(name),$par(index).spe
}
